pipeline {
    agent any
    
    stages {
        stage('Clone Repository') {
            steps {
                // Clone the Git repository
                git 'https://github.com/Abin5618/Simple-Calculator.git'
            }
        }
        
        stage('Build') {
            steps {
                // Use Maven to build the project
                sh 'mvn clean install'
            }
        }
        
        stage('Test') {
            steps {
                // Run tests (Maven will run tests by default)
                sh 'mvn test'
            }
        }
        
        stage('Package') {
            steps {
                // Package the application
                sh 'mvn package'
            }
        }

        stage('Deploy to Tomcat') {
            steps {
                script {
                    // Define Tomcat server details
                    def tomcatUrl = 'http://localhost:8080/manager/text'
                    def warFile = 'target\simple-calculator-1.0-SNAPSHOT.war' // Update with the actual WAR file name
                    def tomcatUsername = 'admin' // Set this in Jenkins credentials
                    def tomcatPassword = 'admin' // Set this in Jenkins credentials

                    // Deploy the WAR file using curl
                    sh "curl -u ${tomcatUsername}:${tomcatPassword} -T ${warFile} ${tomcatUrl}/deploy?path=/simplecalculator&update=true"
                }
            }
        }
    }
    
    post {
        always {
            // Archive test results or logs
            archiveArtifacts artifacts: '**/target/*.jar', allowEmptyArchive: true
        }
    }
}


